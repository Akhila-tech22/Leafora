    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('navbar-menu');
            const mobileLogout = document.getElementById('mobile-logout');
            const isActive = menu.classList.toggle('active');
            
            // Show/hide mobile logout button
            if (isActive) {
                mobileLogout.style.display = 'block';
            } else {
                mobileLogout.style.display = 'none';
            }
        }
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const menu = document.getElementById('navbar-menu');
            const toggle = document.querySelector('.mobile-toggle');
            const mobileLogout = document.getElementById('mobile-logout');
            
            if (!menu.contains(event.target) && !toggle.contains(event.target)) {
                menu.classList.remove('active');
                mobileLogout.style.display = 'none';
            }
        });
        
        // Close mobile menu when clicking on a link
        document.querySelectorAll('.navbar-link').forEach(link => {
            link.addEventListener('click', function() {
                const menu = document.getElementById('navbar-menu');
                const mobileLogout = document.getElementById('mobile-logout');
                menu.classList.remove('active');
                mobileLogout.style.display = 'none';
            });
        });

        // Handle responsive logout button visibility
        function handleResponsive() {
            const desktopLogout = document.getElementById('desktop-logout');
            const mobileLogout = document.getElementById('mobile-logout');
            
            if (window.innerWidth <= 992) {
                desktopLogout.style.display = 'none';
            } else {
                desktopLogout.style.display = 'flex';
                mobileLogout.style.display = 'none';
            }
        }

