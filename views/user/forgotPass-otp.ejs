<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leafora - Verify OTP</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
 <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .otp-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 480px;
            width: 100%;
            padding: 40px;
            text-align: center;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 700;
            color: #2c3e50;
        }

        .logo i {
            color: lightslategray;
            font-size: 32px;
        }

        .icon-circle {
            width: 80px;
            height: 80px;
            background: lightslategray;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
        }

        .icon-circle i {
            color: white;
            font-size: 36px;
        }

        h1 {
            font-size: 26px;
            color: #2c3e50;
            margin-bottom: 12px;
            font-weight: 700;
        }

        .subtitle {
            color: #6c757d;
            font-size: 15px;
            margin-bottom: 8px;
        }

        .email-display {
            color: #3498db;
            font-weight: 600;
            font-size: 15px;
            margin-bottom: 30px;
        }

        .otp-inputs {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-bottom: 25px;
        }

        .otp-input {
            width: 55px;
            height: 60px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            text-align: center;
            font-size: 24px;
            font-weight: 600;
            color: #2c3e50;
            background: #f8f9fa;
        }

        .otp-input:focus {
            outline: none;
            border-color: #3498db;
            background: white;
        }

        .timer {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .verify-btn {
            width: 100%;
            padding: 14px;
            background: lightslategray;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            margin-bottom: 20px;
        }

        .verify-btn:hover {
            opacity: 0.9;
        }

        .resend-section {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .resend-link {
            color: #3498db;
            text-decoration: none;
            font-weight: 600;
            cursor: pointer;
        }

        .resend-link:hover {
            text-decoration: underline;
        }

        .back-link {
            color: #6c757d;
            text-decoration: none;
            font-size: 14px;
        }

        .back-link:hover {
            color: #3498db;
        }

        .message {
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            display: none;
        }

        .error {
            background: #f8d7da;
            color: #721c24;
        }

        .success {
            background: #d4edda;
            color: #155724;
        }

        /* Mobile */
        @media (max-width: 480px) {
            .otp-container {
                padding: 30px 20px;
            }

            .otp-inputs {
                gap: 8px;
            }

            .otp-input {
                width: 48px;
                height: 55px;
            }
        }
    </style>
</head>
<body>
    <div class="otp-container">
        <!-- Logo -->
        <div class="logo">
            <i class="fas fa-book-open"></i>
            Leafora
        </div>

        <!-- Icon -->
        <div class="icon-circle">
            <i class="fas fa-envelope"></i>
        </div>

        <!-- Title -->
        <h1>Verify Your Email</h1>
        <p class="subtitle">We've sent a 6-digit code to</p>
        <p class="email-display" id="userEmail"><%= email %></p>

        <!-- Messages -->
        <div class="message error" id="errorMsg">Invalid OTP!</div>
        <div class="message success" id="successMsg">Verified Successfully!</div>

        <!-- OTP Form -->
        <form id="otpForm">
            <div class="otp-inputs">
                <input type="text" class="otp-input" maxlength="1">
                <input type="text" class="otp-input" maxlength="1">
                <input type="text" class="otp-input" maxlength="1">
                <input type="text" class="otp-input" maxlength="1">
                <input type="text" class="otp-input" maxlength="1">
                <input type="text" class="otp-input" maxlength="1">
            </div>

            <div class="timer">
                Code expires in <strong id="timer">05:00</strong>
            </div>

            <button type="submit" class="verify-btn">Verify OTP</button>
        </form>

        <!-- Resend -->
        <div class="resend-section">
            Didn't receive? 
            <a class="resend-link" onclick="resendOTP()">Resend OTP</a>
        </div>

        <!-- Back Link -->
        <a href="/forgot-password" class="back-link">
            <i class="fas fa-arrow-left"></i> Change Email
        </a>
    </div>
   

    <script>
        // Get all input boxes
        const inputs = document.querySelectorAll('.otp-input');
        const form = document.getElementById('otpForm');
        
        // Auto focus next box
        inputs.forEach((input, index) => {
            input.addEventListener('input', function() {
                if (this.value.length === 1 && index < inputs.length - 1) {
                    inputs[index + 1].focus();
                }
            });

            // Backspace to previous
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && this.value === '' && index > 0) {
                    inputs[index - 1].focus();
                }
            });
        });

        // Timer countdown
        let timeLeft = 300; // 5 minutes
        const timerDisplay = document.getElementById('timer');
        
        setInterval(function() {
            timeLeft--;
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerDisplay.textContent = 
                minutes.toString().padStart(2, '0') + ':' + 
                seconds.toString().padStart(2, '0');
            
            if (timeLeft <= 0) {
                timerDisplay.textContent = 'Expired';
            }
        }, 1000);

        // Form submit
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get OTP value
            let otp = '';
            inputs.forEach(input => {
                otp += input.value;
            });

            // Check if all filled
            if (otp.length !== 6) {
                showMessage('error', 'Please enter all 6 digits');
                return;
            }

            // Send to server
            fetch('/otp-forgotPass', {
                method: 'POST',
                credentials: 'same-origin', 
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ otp: otp })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showMessage('success', 'Verified!');
                    setTimeout(() => {
                        window.location.href = '/passwordChange';
                    }, 1000);
                } else {
                    showMessage('error', 'Invalid OTP!');
                    clearInputs();
                }
            })
            .catch(err => {
                showMessage('error', 'Error! Try again');
            });
        });

        // Show message
        function showMessage(type, text) {
            const msg = document.getElementById(type + 'Msg');
            msg.textContent = text;
            msg.style.display = 'block';
            setTimeout(() => {
                msg.style.display = 'none';
            }, 3000);
        }

        // Clear inputs
        function clearInputs() {
            inputs.forEach(input => {
                input.value = '';
            });
            inputs[0].focus();
        }

        // Resend OTP
        function resendOTP() {
            fetch('/resend-PassOtp', {
                method: 'POST',
                credentials: 'same-origin', 
                headers: { 'Content-Type': 'application/json' }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    showMessage('success', 'OTP Sent!');
                    timeLeft = 300; // Reset timer
                }
            });
        }
    </script> 
</body>
</html>