        <!-- Product Details -->
        <main class="main-content">
            <div class="product-section">
                <!-- Image Gallery with Thumbnails -->
               <!-- Image Gallery with Thumbnails -->
<div class="image-gallery">
    <% 
    const images = Array.isArray(product.productImage) ? product.productImage : [product.productImage];
    %>
    
    <!-- Thumbnail Column - Show only if multiple images -->
    <% if (images.length > 1) { %>
        <div class="thumbnail-column">
            <% images.forEach((img, index) => { %>
                <div class="thumbnail <%= index === 0 ? 'active' : '' %>" onclick="changeImage('<%= img %>', <%= index %>)">
                    <img src="/images/<%= img %>" alt="<%= product.productName %> view <%= index + 1 %>">
                </div>
            <% }); %>
        </div>
    <% } %>

