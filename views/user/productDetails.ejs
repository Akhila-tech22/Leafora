                 alt="<%= product.productName %>" 
                 class="product-image" 
                 id="mainImage">
            
            <div class="zoom-lens" id="zoomLens"></div>
            
            <div class="badges">
                <% 
                const productOffer = product.productOffer || 0;
                const categoryOffer = product.category.offer || 0;
                const maxOffer = Math.max(productOffer, categoryOffer);
                const discountPercent = Math.round(((product.regularPrice - product.salePrice) / product.regularPrice) * 100);
                const finalDiscount = Math.max(maxOffer, discountPercent);
                %>
                <% if (finalDiscount > 0) { %>
                    <span class="badge sale"><%= finalDiscount %>% OFF</span>
                <% } %>
                <% if (product.createdAt && new Date(product.createdAt) > new Date(Date.now() - 30*24*60*60*1000)) { %>
                    <span class="badge new">NEW</span>
                <% } %>
            </div>
        </div>
        
        <!-- Zoom Result -->
        <div class="zoom-result" id="zoomResult"></div>
    </div>
</div>

                <!-- Product Info -->
