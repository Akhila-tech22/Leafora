      async function addToCart(productId, event) {
    const btn = event.target.closest('.btn');
    const originalHTML = btn.innerHTML;
    
    if (btn.classList.contains('btn-adding') || btn.dataset.added === "true") {
        if (btn.dataset.added === "true") {
            window.location.href = '/cart';
        }
        return;
    }

    try {
        btn.classList.add('btn-adding');
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
        btn.disabled = true;

        let res = await fetch('/addToCart', {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ productId })
        });

        let data = await res.json();

        if (data.redirect) {
            window.location.href = data.redirect;
            return;
        }

        if (data.success) {
            const cartCount = document.querySelector('.cart-count');
            if (cartCount) {
                let count = parseInt(cartCount.textContent) || 0;
                cartCount.textContent = count + 1;
                cartCount.classList.add('animate');
                setTimeout(() => cartCount.classList.remove('animate'), 400);
            }

            btn.innerHTML = '<i class="fas fa-check"></i> Added!';
            
            setTimeout(() => {
                btn.classList.remove('btn-adding');
                btn.innerHTML = '<i class="fas fa-shopping-cart"></i> Go to Cart';
                btn.disabled = false;
                btn.dataset.added = "true";
            }, 1000);

        } else {
            // ðŸ”¥ Error handling - limit exceeded, blocked product, etc.
            btn.classList.remove('btn-adding');
            btn.innerHTML = originalHTML;
            btn.disabled = false;
            
            Swal.fire({
                icon: 'error',
                title: 'Cannot Add to Cart',
                text: data.message || 'Failed to add to cart',
                confirmButtonColor: '#8B6F47'
            });
        }

    } catch (err) {
        console.error('Add to cart error:', err);
        btn.classList.remove('btn-adding');
        btn.innerHTML = originalHTML;
        btn.disabled = false;
        
        Swal.fire({
            icon: 'error',
            title: 'Network Error',
            text: 'Please check your connection and try again',
            confirmButtonColor: '#8B6F47'
        });
    }
}

