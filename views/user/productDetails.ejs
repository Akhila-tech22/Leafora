    <script>
        // Image Gallery & Zoom Functionality
        let currentZoomRatio = { x: 1, y: 1 };

        function changeImage(imagePath, index) {
            const mainImage = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumbnail');
            
            mainImage.src = '/images/' + imagePath;
            
            thumbnails.forEach(thumb => thumb.classList.remove('active'));
            thumbnails[index].classList.add('active');
            
            mainImage.onload = function() {
                initImageZoom();
            };
        }

        function initImageZoom() {
            const wrapper = document.getElementById('imageZoomWrapper');
            const img = document.getElementById('mainImage');
            const lens = document.getElementById('zoomLens');
            const result = document.getElementById('zoomResult');
            
            if (!wrapper || !img || !lens || !result) return;
            
            const newWrapper = wrapper.cloneNode(true);
            wrapper.parentNode.replaceChild(newWrapper, wrapper);
            
            const freshWrapper = document.getElementById('imageZoomWrapper');
            const freshImg = document.getElementById('mainImage');
            const freshLens = document.getElementById('zoomLens');
            const freshResult = document.getElementById('zoomResult');
            
            const zoomLevel = 2.5;
            currentZoomRatio.x = zoomLevel;
            currentZoomRatio.y = zoomLevel;
            
            freshResult.style.backgroundImage = `url('${freshImg.src}')`;
            
            function updateZoom() {
                const imgRect = freshImg.getBoundingClientRect();
                const imgNaturalWidth = freshImg.naturalWidth;
                const imgNaturalHeight = freshImg.naturalHeight;
                
                freshResult.style.backgroundSize = `${imgNaturalWidth * zoomLevel}px ${imgNaturalHeight * zoomLevel}px`;
            }
            
            if (freshImg.complete && freshImg.naturalWidth > 0) {
                updateZoom();
            } else {
                freshImg.addEventListener('load', updateZoom);
            }
            
            freshWrapper.addEventListener('mousemove', moveLens);
            freshWrapper.addEventListener('mouseenter', showZoom);
            freshWrapper.addEventListener('mouseleave', hideZoom);
            
            function moveLens(e) {
                e.preventDefault();
                
                const wrapperRect = freshWrapper.getBoundingClientRect();
                const imgRect = freshImg.getBoundingClientRect();
                
                let x = e.clientX - imgRect.left;
                let y = e.clientY - imgRect.top;
                
                if (x < 0) x = 0;
                if (y < 0) y = 0;
                if (x > imgRect.width) x = imgRect.width;
                if (y > imgRect.height) y = imgRect.height;
                
                let lensX = x - (freshLens.offsetWidth / 2);
                let lensY = y - (freshLens.offsetHeight / 2);
                
                const maxLensX = imgRect.width - freshLens.offsetWidth;
                const maxLensY = imgRect.height - freshLens.offsetHeight;
                
                if (lensX > maxLensX) lensX = maxLensX;
                if (lensX < 0) lensX = 0;
                if (lensY > maxLensY) lensY = maxLensY;
                if (lensY < 0) lensY = 0;
                
                freshLens.style.left = lensX + 'px';
                freshLens.style.top = lensY + 'px';
                
                const scaleX = freshImg.naturalWidth / imgRect.width;
                const scaleY = freshImg.naturalHeight / imgRect.height;
                
                const bgX = lensX * scaleX * zoomLevel;
                const bgY = lensY * scaleY * zoomLevel;
                
                freshResult.style.backgroundPosition = `-${bgX}px -${bgY}px`;
            }
            
            function showZoom() {
                freshLens.style.display = 'block';
                freshResult.style.display = 'block';
                updateZoom();
            }
            
            function hideZoom() {
                freshLens.style.display = 'none';
                freshResult.style.display = 'none';
            }
        }

